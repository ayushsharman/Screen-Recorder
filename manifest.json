{
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "Record your screen",

    "icons": {
        "128": "./images/screen-recorder-icon.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/screen-recorder-icon-16x16.png",
            "32": "./images/screen-recorder-icon-32x32.png",
            "128": "./images/screen-recorder-icon.png"
        }
    },

    "host_permissions": [
        "http://*/",
        "https://*/*"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ]
}